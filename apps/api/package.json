{
  "name": "@cie/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "tsx prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:load": "k6 run tests/load/contract-analysis.js"
  },
  "dependencies": {
    "fastify": "^4.28.1",
    "@fastify/multipart": "^7.7.3",
    "mercurius": "^14.1.0",
    "@prisma/client": "^5.20.0",
    "bullmq": "^5.12.1",
    "ioredis": "^5.4.1",
    "tesseract.js": "^5.1.0",
    "pdf-parse": "^1.1.1",
    "fastify-plugin": "^4.5.1",
    "axios": "^1.6.2",
    "@opentelemetry/sdk-node": "^0.45.1",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.45.1",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.45.1",
    "@opentelemetry/sdk-metrics": "^1.18.1",
    "@opentelemetry/resources": "^1.18.1",
    "@opentelemetry/semantic-conventions": "^1.18.1",
    "@opentelemetry/instrumentation": "^0.45.1",
    "@opentelemetry/instrumentation-fastify": "^0.32.4",
    "@opentelemetry/instrumentation-http": "^0.45.1",
    "@prisma/instrumentation": "^5.7.0"
  },
  "devDependencies": {
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "@types/node": "^20.11.30",
    "prisma": "^5.20.0",
    "@faker-js/faker": "^9.0.0",
    "@types/pdf-parse": "^1.1.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@types/jest": "^29.5.12",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "testcontainers": "^10.7.2",
    "@testcontainers/postgresql": "^10.7.2",
    "k6": "^0.0.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
